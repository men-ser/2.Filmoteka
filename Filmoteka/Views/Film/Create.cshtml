@model Filmoteka.Models.Film

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="ps-lg-3">Create</h1>

<h4 class="ps-lg-3">Film</h4>
<hr />
<div class="row width1">
    <div class="col-md-4 m-l-10">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="mytext-danger "></div>
            <div class="form-group ">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control width " />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director" class="control-label"></label>
                <input asp-for="Director" class="form-control width " />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control width" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control width" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="">
                   <label asp-for="Poster" class="control-label"></label>
                   <input type="hidden" asp-for="Poster" class="form-control width" value="~" />
                    <span asp-validation-for="Poster" class="text-danger"></span>
                    <input type="file" name="uploadedFile" />
               </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows=5 asp-for="Description" class="form-control width"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a class="btn myBtn m-l-10" asp-action="Index">Back to List</a>
    </div>
</div>



