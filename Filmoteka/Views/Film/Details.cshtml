@model Filmoteka.Models.Film

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    
}

<h1>Details</h1>

<div>
    <h4>Film</h4>
    <hr />
    <div class="container">
        <div>
        <div class="flex-column m-l-10">
        <dl id="showDetails" class="row ">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        </dl>
        </div>
        <div>
                <a class="btn myBtn m-l-10" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <a class="btn myBtn m-l-10" asp-action="Index">Back to List</a>
            </div>
        </div>

        <div class="flex-column">
            <div class="col-sm-10">
                @{
                    var path = @"~/image/" + @Model.Poster + ".jpg";
                }
                <img src="@Url.Content(path)" alt="poster" width="400" height="600" />

            <div/>
        </div>


    </div>
       
</div>

